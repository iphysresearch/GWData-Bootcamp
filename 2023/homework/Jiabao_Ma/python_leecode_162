class Solution:
    def findPeakElement(self, nums: List[int]) -> int:
        left = 0 
        right = len(nums)-1
        # 初始化左右边界
        while left < right:
            mid  =left + (right-left) // 2
             # 如果mid处于下降区间，峰值可能在左半部分
            if nums[mid] > nums[mid + 1]:
                right = mid
            # 否则，峰值可能在右半部分
            else:
                left = mid + 1

        return left